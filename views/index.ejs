<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        margin: 0;
        padding: 0;
      }

      h1 {
        text-align: center;
        color: #444;
        margin: 20px 0;
      }

      ul {
        list-style: none;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }

      .post-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .post-header h2 {
        font-size: 1.2em;
        margin: 0;
        color: #333;
      }

      .post-header small {
        color: #777;
      }

      .post-content p {
        font-size: 1em;
        line-height: 1.6;
        margin: 10px 0;
      }

      .btn {
        background-color: #007bff;
        color: #fff;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
      }

      .btn:hover {
        background-color: #0056b3;
      }

      .add-message {
        text-align: center;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>

      <ul>
        <% messages.forEach((message) => { %>
        <li class="post-card">
          <form action="/open/<%= message.id %>">
            <div class="post-header">
              <h2><%= message.username %></h2>
              <small><%= message.added %></small>
            </div>
            <div class="post-content">
              <p><%= message.message %></p>
            </div>
            <button class="btn">Open</button>
          </form>
        </li>
        <% }); %>
      </ul>

      <div class="add-message">
        <form action="/new" method="get">
          <button class="btn">Add Message</button>
        </form>
      </div>
    </div>
  </body>
</html>
